<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/route_list_fragment"
        android:name="com.mibarim.main.ui.fragments.RouteListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/refresh_btn_fragment"
        android:name="com.mibarim.main.ui.fragments.RefreshButtonFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_refresh_button" />

    <FrameLayout
        android:id="@+id/add_btn_fragment"
        android:name="com.mibarim.main.ui.fragments.AddButtonFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_add_button" />
</RelativeLayout>