<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <com.beardedhen.androidbootstrap.AwesomeTextView
            android:id="@+id/fa_no_matter"
            style="@style/wrapping_fa_text"
            android:layout_margin="20dp"
            app:bootstrapBrand="success"
            app:fontAwesomeIcon="fa_check" />

        <com.beardedhen.androidbootstrap.AwesomeTextView
            android:id="@+id/fa_no_matter_icon"
            style="@style/wrapping_fa_text"
            android:layout_margin="15dp"
            android:background="@drawable/roundedbutton"
            android:minHeight="40dp"
            android:minWidth="40dp"
            app:bootstrapBrand="warning"
            app:fontAwesomeIcon="fa_child" />


        <TextView
            android:id="@+id/label_no_matter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingRight="0dp"
            android:text="@string/win_win"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <com.beardedhen.androidbootstrap.AwesomeTextView
            android:id="@+id/fa_min_max"
            style="@style/wrapping_fa_text"
            android:layout_margin="20dp"
            app:bootstrapBrand="success"
            app:fontAwesomeIcon="fa_check" />

        <com.beardedhen.androidbootstrap.AwesomeTextView
            android:id="@+id/fa_min_max_icon"
            style="@style/wrapping_fa_text"
            android:layout_margin="15dp"
            android:background="@drawable/roundedbutton"
            android:minHeight="40dp"
            android:minWidth="40dp"
            app:bootstrapBrand="warning"
            app:fontAwesomeIcon="fa_money" />

        <TextView
            android:id="@+id/label_min_max"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingRight="0dp"
            android:text="@string/min_max_price"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/min_max_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:animateLayoutChanges="true"
        android:orientation="horizontal"
        android:padding="20dp">

        <EditText
            android:id="@+id/min_max_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:text="@string/rial"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <com.beardedhen.androidbootstrap.AwesomeTextView
            android:id="@+id/fa_free"
            style="@style/wrapping_fa_text"
            android:layout_margin="20dp"
            app:bootstrapBrand="success"
            app:fontAwesomeIcon="fa_check" />

        <com.beardedhen.androidbootstrap.AwesomeTextView
            android:id="@+id/fa_free_icon"
            style="@style/wrapping_fa_text"
            android:layout_margin="15dp"
            android:background="@drawable/roundedbutton"
            android:minHeight="40dp"
            android:minWidth="40dp"
            app:bootstrapBrand="warning"
            app:fontAwesomeIcon="fa_thumbs_o_up" />

        <TextView
            android:id="@+id/label_free"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingRight="0dp"
            android:text="@string/free"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

</LinearLayout>
